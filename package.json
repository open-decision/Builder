{
  "name": "open-decision",
  "repository": "https://github.com/open-legal-tech/open-decision",
  "workspaces": [
    "packages/**",
    "apps/**"
  ],
  "scripts": {
    "serve:builder": "nx run-many --target=serve --projects=builder,api",
    "serve:renderer": "nx run-many --target=serve --projects='renderer-app,api'",
    "serve": "nx run-many --target=serve --projects=renderer-app,api,builder",
    "remove:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + ",
    "remove:dist": "rm -rf dist",
    "setup_repo": "pnpm install && nx build prisma"
  },
  "license": "MIT",
  "private": true,
  "version": "0.0.1",
  "dependencies": {
    "@babel/core": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@nrwl/devkit": "^14.4.2",
    "@nrwl/js": "^14.4.2",
    "@nrwl/next": "^14.4.2",
    "@nrwl/node": "^14.4.2",
    "@nrwl/nx-cloud": "14.2.0",
    "@nrwl/tao": "^14.4.2",
    "@nrwl/workspace": "^14.4.2",
    "@nxext/vitest": "^14.0.0",
    "babel-loader": "^8.2.5",
    "c8": "^7.11.3",
    "core-js": "^3.23.4",
    "dotenv": "^16.0.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.1",
    "next": "^12.2.2",
    "nx": "^14.4.2",
    "prettier": "^2.7.1",
    "regenerator-runtime": "^0.13.9",
    "rxjs": "^7.5.6",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "tslib": "^2.4.0",
    "typescript": "4.7.4",
    "utility-types": "^3.10.0",
    "vite": "^3.0.0",
    "vitest": "^0.18.0",
    "wait-on": "^6.0.1",
    "webpack": "^5.73.0"
  },
  "devDependencies": {
    "@nrwl/eslint-plugin-nx": "^14.4.2",
    "@nrwl/jest": "^14.4.2",
    "@nrwl/linter": "^14.4.2",
    "@playwright/test": "^1.23.3",
    "@sentry/cli": "^2.4.0",
    "@swc/cli": "~0.1.57",
    "@swc/core": "~1.2.213",
    "@swc/helpers": "^0.4.3",
    "@swc/jest": "^0.2.21",
    "@types/jest": "^28.1.5",
    "@types/node": "^18.0.3",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "eslint-plugin-cypress": "^2.10.3",
    "jest": "^28",
    "tsconfig-paths-webpack-plugin": "^3.5.2"
  },
  "pnpm": {
    "overrides": {
      "react@^17.0": "^18.2.0",
      "react-dom@^17.0": "^18.2.0"
    },
    "packageExtensions": {
      "@radix-ui/react-dropdown-menu": {
        "peerDependencies": {
          "react": "^18.2.0",
          "react-dom": "^18.2.0"
        }
      }
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  }
}
