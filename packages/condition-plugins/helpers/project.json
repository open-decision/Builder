{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/condition-plugins/helpers/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nrwl/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/condition-plugins/helpers",
        "main": "packages/condition-plugins/helpers/src/index.ts",
        "tsConfig": "packages/condition-plugins/helpers/tsconfig.lib.json",
        "assets": ["packages/condition-plugins/helpers/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/condition-plugins/helpers/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/condition-plugins/helpers"],
      "options": {
        "jestConfig": "packages/condition-plugins/helpers/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
