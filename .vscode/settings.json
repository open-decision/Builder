{
  "conventionalCommits.scopes": [
    "builder",
    "types",
    "design-system",
    "interpreter",
    "renderer",
    "api"
  ],
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/*.yarn": true
  },
  "todo-tree.general.tags": ["BUG", "HACK", "FIXME", "TODO", "SECURITY"],
  "rest-client.environmentVariables": {
    "$shared": {
      "dev_email": "test@od.org"
    }
  },
  "conventionalCommits.gitmoji": false,
  "conventionalCommits.lineBreak": "\\n",
  "conventionalCommits.showEditor": true,
  "eslint.nodePath": ".yarn/sdks",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "ngClass",
    ".*Styles",
    "classNames"
  ],
  "tailwindCSS.experimental.configFile": "packages/design-system/tailwind.config.js",
  "tailwindCSS.experimental.classRegex": [
    ["Classes \\=([^;]*);", "'([^']*)'"],
    ["Classes \\=([^;]*);", "\"([^\"]*)\""],
    ["Classes \\=([^;]*);", "\\`([^\\`]*)\\`"],
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ]
}
