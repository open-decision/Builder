{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "implicitDependencies": ["prisma"],
  "targets": {
    "build": {
      "executor": "@nrwl/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/api",
        "main": "apps/api/src/index.ts",
        "tsConfig": "apps/api/tsconfig.app.json",
        "target": "node",
        "compiler": "tsc",
        "externalDependencies": [
          "express",
          "swagger-jsdoc",
          "argon2",
          "@prisma/client"
        ]
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": "dependencies"
        },
        {
          "target": "setup",
          "projects": "dependencies"
        }
      ]
    },
    "close:db": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["docker compose -f docker-compose.yml down"],
        "cwd": "apps/api"
      }
    },
    "start:db": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker compose -f apps/api/docker-compose.yml up -d --wait"
        ]
      }
    },
    "serve:api": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "api:build",
        "inspect": false
      },
      "watch": true
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx migrate:dev prisma",
          "nx seed:db api",
          "nx serve:api api"
        ],
        "parallel": false
      },
      "dependsOn": [
        {
          "target": "start:db",
          "projects": "self"
        }
      ]
    },
    "seed:db": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["prisma db seed"],
        "cwd": "apps/api"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "configurations": {
        "watch": {
          "watch": true,
          "passWithNoTests": true
        }
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "flyctl deploy --config apps/api/fly.toml --dockerfile apps/api/Dockerfile"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p tsconfig.app.json",
        "cwd": "apps/api"
      },
      "dependsOn": [
        {
          "projects": "dependencies",
          "target": "build"
        }
      ]
    }
  },
  "tags": [],
  "name": "api"
}
