{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/e2e/src",
  "projectType": "application",
  "targets": {
    "start:db": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker compose -f docker-compose.yml up -d"
        ],
        "cwd": "apps/e2e"
      }
    },
    "cleanup": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker compose -f docker-compose.yml down",
          "rm -rf sessions"
        ],
        "cwd": "apps/e2e"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm playwright test",
        "cwd": "apps/e2e"
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": "dependencies"
        }
      ]
    },
    "test:ci": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm playwright test --config=playwright.ci.config.ts",
        "cwd": "apps/e2e"
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": "dependencies"
        }
      ]
    },
    "show-trace": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm playwright show-trace",
        "cwd": "apps/e2e"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm playwright show-report playwright-report",
        "cwd": "apps/e2e"
      }
    },
    "record": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm playwright codegen --load-storage=apps/e2e/storageState.json localhost:4400"
      }
    }
  },
  "tags": []
}
